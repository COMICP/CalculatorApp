<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label x:Name="topAns" Text="Calculator Demo" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="TopEnt" Placeholder="Enter first number" />
        <Entry x:Name="BotEnt" Placeholder="Enter second number" />

        <Button Text="+" Clicked="Add_Nums"/>
        <Button Text="-" Clicked="Sub_Nums"/>
        <Button Text="/" Clicked="Div_Nums"/>
        <Button Text="*" Clicked="Mul_Nums"/>
    </StackLayout>

</ContentPage>
